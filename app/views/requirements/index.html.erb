<div class="row">
  <div class="col-12">
    <h3>
      <%= link_to "Requirements", root_url %> (<%= @requirements.size %> éléments)
    </h3>
  </div>
</div>

<hr>

<div class="row">
  <div class="col-12">
    <div class="float-right">
      <%= form_tag import_requirements_file_path(), :multipart => true, :class => 'simple_form' do %>
        <%= file_field_tag :file %>
        <%= submit_tag "Import", :class => 'btn btn-primary' %>
      <% end %>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-12">
    <button type="button" data-filter-column="1">^h</button> (beginning of word)<br>
    <button type="button" data-filter-column="1">s$</button> (end of word)<br>
    <button type="button" class="reset">Reset</button><br>
    <table id="myTable" class="tablesorter">
      <thead>
        <tr>
          <th data-placeholder="Enter something...">Content</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @requirements.each do |requirement| %>
          <tr>
            <td><%= link_to requirement.content, requirement %></td>
            <td><%= link_to 'Show', requirement %></td>
            <td><%= link_to 'Edit', edit_requirement_path(requirement) %></td>
            <td><%= link_to 'Destroy', requirement, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>

    </table>
  </div>
</div>
