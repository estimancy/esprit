<script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.0/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.tablesorter/2.31.2/js/jquery.tablesorter.min.js" integrity="sha256-WX1A5tGpPfZZ48PgoZX2vpOojjCXsytpCvgPcRPnFKU=" crossorigin="anonymous"></script>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/jquery.tablesorter/2.31.2/css/theme.default.min.css" integrity="sha256-5sgExNTnkN8NcApKIU73/aqgZmqq/zJp9+9zXf9aSEw=" crossorigin="anonymous" />

<div class="row">
  <div class="col-12">
    <h3>
      <%= link_to "Requirements", root_url %> (<%= @requirements.size %> éléments)
    </h3>
  </div>
</div>

<hr>

<div class="row">
  <div class="col-12">
    <div class="float-right">
      <%= form_tag import_requirements_file_path(), :multipart => true, :class => 'simple_form' do %>
        <%= file_field_tag :file %>
        <%= submit_tag "Import", :class => 'btn btn-primary' %>
      <% end %>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-12">
    <table id="myTable">

      <thead>
        <tr>
          <th>Content</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @requirements.each do |requirement| %>
          <tr>
            <td><%= link_to requirement.content, requirement %></td>
            <td><%= link_to 'Show', requirement %></td>
            <td><%= link_to 'Edit', edit_requirement_path(requirement) %></td>
            <td><%= link_to 'Destroy', requirement, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<script>
    $(function() {
        $("#myTable").tablesorter({
            theme: 'default',
            widgets: ['filter']
        });
    });
</script>

